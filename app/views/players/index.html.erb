<h1>There are <%= @players.count %> players in our league</h1>
<table>
	<thead>
		<tr>
			<td>First name</td>
			<td>Last name</td>
			<td>Actions</td>
			
		</tr>
	</thead>

	<tbody>
		<% @players.each do |player| %>
		<tr>
			<td><%= player.First_name %></td>
			<td><%= player.Last_name %></td>
			<td><a href="/players/<%= player.id %>">Show</a></td>
		</tr>
		<% end %>
		
	</tbody>
</table>
<a href="/players/new">New Player</a>