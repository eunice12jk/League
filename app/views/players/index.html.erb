<% content_for(:title,"Players") %>
<h1>Listing <%= pluralize(@players.length, "player") %></h1>
<table>
	<thead>
		<tr>
			<td>First name</td>
			<td>Last name</td>
			<td>Actions</td>
			
		</tr>
	</thead>

	<tbody>
		<% @players.each do |player| %>
		<tr>
			<td><%= player.First_name %></td>
			<td><%= player.Last_name %></td>
			<td>
				<%= link_to "Show Page", player_path(player.id) %>|
				<%= link_to "Edit Page", player_edit_path(player.id) %>|
				<%= link_to "Delete Profile", player_path(player.id), data: {method: :delete, confirm: "Are you sure?"} %>
			</td>
		</tr>
		<% end %>
		
	</tbody>
</table>
